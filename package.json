{
	"version": "0.4.0",
	"license": "MIT",
	"name": "@oliverflecke/components-react",
	"author": "Oliver Fleckenstein",
	"module": "dist/components-react.esm.js",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"private": false,
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build:css:dev": "NODE_ENV=development TAILWIND_MODE=watch postcss src/styles/main.css -o .storybook/main.css -v --watch",
		"build:css": "NODE_ENV=production postcess src/styles/main.css -o .storybook/main.css",
		"dev": "concurrently --kill-others --names \"CSS,SB\" -c \"bgBlue.bold,bgGreen.bold\" \"yarn build:css:dev\" \"yarn storybook\"",
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook -o build",
		"deploy": "gh-pages -d build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"trailingComma": "es5"
	},
	"size-limit": [
		{
			"path": "dist/components-react.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/components-react.esm.js",
			"limit": "10 KB"
		}
	],
	"peerDependencies": {
		"react": ">=18"
	},
	"devDependencies": {
		"@babel/core": "^7.18.0",
		"@size-limit/preset-small-lib": "^7.0.8",
		"@storybook/addon-essentials": "^6.5.3",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-links": "^6.5.3",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/addons": "^6.5.3",
		"@storybook/react": "^6.5.3",
		"@types/enzyme": "^3.10.12",
		"@types/enzyme-adapter-react-16": "^1.0.6",
		"@types/react": "^18.0.9",
		"@types/react-dom": "^18.0.4",
		"@types/react-test-renderer": "^18.0.0",
		"autoprefixer": "^10.4.7",
		"babel-loader": "^8.2.5",
		"concurrently": "^7.2.0",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.6",
		"gh-pages": "^4.0.0",
		"husky": "^8.0.1",
		"jest-enzyme": "^7.1.2",
		"postcss": "^8.4.14",
		"postcss-cli": "^9.1.0",
		"postcss-import": "^14.1.0",
		"postcss-loader": "^7.0.0",
		"postcss-nested": "^5.0.5",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"react-is": "^18.1.0",
		"react-test-renderer": "^18.1.0",
		"rollup-plugin-postcss": "^4.0.2",
		"rollup-plugin-static-files": "^0.2.0",
		"size-limit": "^7.0.8",
		"storybook-dark-mode": "^1.1.0",
		"tailwindcss": "^3.0.24",
		"tsdx": "^0.14.1",
		"tslib": "^2.4.0",
		"typescript": "^4.6.4"
	}
}
