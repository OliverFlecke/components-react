{
	"version": "0.1.10",
	"license": "MIT",
	"name": "@oliverflecke/components-react",
	"author": "Oliver Fleckenstein",
	"module": "dist/components-react.esm.js",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"private": false,
	"files": [
		"dist",
		"src"
	],
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build:css:dev": "NODE_ENV=development postcss src/styles/main.css -o .storybook/main.css -w",
		"build:css": "NODE_ENV=production postcess src/styles/main.css -o .storybook/main.css",
		"start": "tsdx watch",
		"build": "tsdx build",
		"test": "tsdx test --passWithNoTests",
		"lint": "tsdx lint",
		"prepare": "tsdx build",
		"size": "size-limit",
		"analyze": "size-limit --why",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook"
	},
	"husky": {
		"hooks": {
			"pre-commit": "tsdx lint"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"trailingComma": "es5"
	},
	"size-limit": [
		{
			"path": "dist/components-react.cjs.production.min.js",
			"limit": "10 KB"
		},
		{
			"path": "dist/components-react.esm.js",
			"limit": "10 KB"
		}
	],
	"peerDependencies": {
		"react": ">=16"
	},
	"devDependencies": {
		"@babel/core": "^7.14.0",
		"@size-limit/preset-small-lib": "^4.10.2",
		"@storybook/addon-essentials": "^6.2.9",
		"@storybook/addon-info": "^5.3.21",
		"@storybook/addon-links": "^6.2.9",
		"@storybook/addon-postcss": "^2.0.0",
		"@storybook/addons": "^6.2.9",
		"@storybook/react": "^6.2.9",
		"@types/react": "^17.0.4",
		"@types/react-dom": "^17.0.3",
		"autoprefixer": "^10.2.5",
		"babel-loader": "^8.2.2",
		"husky": "^6.0.0",
		"postcss": "^8.2.13",
		"postcss-cli": "^8.3.1",
		"postcss-import": "^14.0.1",
		"postcss-loader": "^5.2.0",
		"postcss-nested": "^5.0.5",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-is": "^17.0.2",
		"rollup-plugin-postcss": "^4.0.0",
		"rollup-plugin-static-files": "^0.2.0",
		"size-limit": "^4.10.2",
		"storybook-dark-mode": "^1.0.7",
		"tailwindcss": "^2.1.2",
		"tsdx": "^0.14.1",
		"tslib": "^2.2.0",
		"typescript": "^4.2.4"
	}
}
