    "postcss": "^8.2.13",
    "postcss-import": "^14.0.1",
    "postcss-nested": "^5.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-static-files": "^0.2.0",
    "size-limit": "^4.10.2",
